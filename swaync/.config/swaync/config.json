{
  "ignore-gtk-theme": "true",
  "cssPriority": "user",

  "positionX": "center",
  "positionY": "top",
  "layer": "overlay",
  "notification-window-width": 500,
  "timeout": 15,
  "timeout-low": 15,
  "timeout-critical": 0,
  "notification-icon-size": 34,
  "notification-body-image-height": 300,
  "notification-body-image-width": 300,
  "transition-time ": 0,

  "control-center-positionX": "right",
  "control-center-layer": "top",
  "control-center-width": 500,
  "control-center-height": 600,
  "control-center-margin-top": 2,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 2,
  "control-center-margin-left": 0,

  "widgets": [
    "dnd",
    "title", 
    "notifications",
    "mpris"
  ],

  "widget-config": {
    "title": {
        "text": "Notifications",
        "clear-all-button": true,
        "button-text": ""
    },
    "dnd": {
        "text": "Do Not Disturb"  
    },
    "mpris": {
        "image-size": 100,
        "image-radius": 5,
        "show-player": "all",
        "show-when-paused": true
    },
    "buttons-grid": {
        "actions": [
        {
            "label": " Settings",
            "command": "$HOME/.config/hypr/scripts/Kool_Quick_Settings.sh"
        },
        {
            "label": "󰐥 Power",
            "command": "$HOME/.config/hypr/scripts/Wlogout.sh"
        },
        {
            "label": " WiFi",
            "command": "$HOME/.config/hypr/scripts/WaybarScripts.sh --nmtui"
        },
        {
            "label": " Bluetooth",
            "command": "blueman-manager"
        }
        ]
    }
  }
}